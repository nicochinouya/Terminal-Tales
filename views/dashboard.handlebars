{{#each posts}}
 <div class="card"> 
        <div class="card-header">  
        <h2>{{post_title}}</h2>
           <h3>{{user.username}}</h3>
          <h3>{{format_date_and_time createdAt}}</h3> 
        </div>
         <h4 id="id">{{id}}</h4>
        <div class="post-content">
        <p >{{post}}</p>
    </div>
    <button id ="btn-delete" class="dashboard-btn">Delete Post</button>
    <button id="btn-update"  class="dashboard-btn">Update Post</button>
    </div>
    {{/each}}

     <a href="/post" class="new-post">Want to create a new post?</a>

     <script src="/js/delete.js"></script>
     